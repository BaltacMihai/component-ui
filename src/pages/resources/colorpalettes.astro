---

<Layout navbarActive="resources">
  <div class="page page_resources">
    <div class="wrapper">
      <h1 class="title">{text.title}</h1>
      <p class="toast" id="toast">{text.toastText}</p>
      <div class="colors">
        {
          colors?.map((color) => {
            return (
              <div class="container">
                <div
                  style={"background-color:#" + color.col1.name}
                  class={
                    color.col1.textColor === "is-light"
                      ? "color is-light"
                      : "color is-dark"
                  }
                  onclick={`copyToClipboard("${color.col1.name}")`}
                >
                  <p>#{color.col1.name}</p>
                </div>
                <div
                  style={"background-color:#" + color.col2.name}
                  class={
                    color.col2.textColor === "is-light"
                      ? "color is-light"
                      : " color is-dark"
                  }
                  onclick={`copyToClipboard("${color.col2.name}")`}
                >
                  <p>#{color.col2.name}</p>
                </div>
                <div
                  style={"background-color:#" + color.col3.name}
                  class={
                    color.col3.textColor === "is-light"
                      ? "color is-light"
                      : " color is-dark"
                  }
